                    android:id="@+id/edt_business_email_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center|bottom|left"
                    android:hint="BUSINESS EMAIL"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:singleLine="true"
                    android:textColorHint="@color/Text_color_black"
                    android:textSize="@dimen/SP15"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_business_email_update"
                    android:background="@drawable/line3">

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:layout_marginTop="@dimen/DP15"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_upload_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/DP10"
                    android:layout_marginRight="@dimen/DP35"
                    android:layout_marginTop="@dimen/DP15"
                    android:background="@drawable/upload"
                    android:gravity="center"
                    android:text="UPLOAD"
                    android:clickable="true"
                    android:padding="@dimen/DP7"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/SP10" />

                <TextView
                    android:id="@+id/txt_upload_status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/DP10"
                    android:layout_marginTop="@dimen/DP15"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/txt_upload_logo"
                    android:text="logo uploaded"
                    android:visibility="invisible"
                    android:clickable="true"
                    android:padding="@dimen/DP7"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/SP10" />

                <TextView

                    android:id="@+id/txt_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/txt_upload_status1"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:singleLine="true"
                    android:text="LOGO"
                    android:textColor="@color/Text_color"
                    android:textSize="@dimen/SP15"
                    android:textStyle="bold" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_logo"
                    android:background="@drawable/line3">

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:layout_marginTop="@dimen/DP15"
                android:visibility="visible">

                <TextView

                    android:id="@+id/txt_operating_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/txt_start_time"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:singleLine="true"
                    android:text="OPERATING HOURS"
                    android:textColor="@color/Text_color"
                    android:textSize="@dimen/SP15"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/DP10"
                    android:padding="@dimen/DP10"
                    android:src="@drawable/time" />

                <TextView

                    android:id="@+id/txt_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/img_end_time"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/DP10"
                    android:singleLine="true"
                    android:hint="Closing"
                    android:textSize="@dimen/SP12" />

                <ImageView
                    android:id="@+id/img_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/txt_end_time"
                    android:padding="@dimen/DP10"
                    android:src="@drawable/time" />

                <TextView

                    android:id="@+id/txt_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/img_start_time"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/DP10"
                    android:singleLine="true"
                    android:hint="Opening"
                    android:textSize="@dimen/SP12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_operating_hours"
                    android:background="@drawable/line3">

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:layout_marginTop="@dimen/DP15"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_days"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/DP5"
                    android:layout_marginRight="@dimen/DP10"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:padding="@dimen/DP5">

                    <ToggleButton
                        android:id="@+id/tog_btn_mon"
                        android:layout_width="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".2"
                        android:layout_height="20dp"
                        android:background="@drawable/monday_selector"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tog_btn_tue"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight=".2"
                        android:background="@drawable/tuesday_selector"
                        android:layout_marginLeft="@dimen/DP5"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tog_btn_wed"
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="20dp"
                        android:background="@drawable/wednesday_selector"
                        android:layout_marginLeft="@dimen/DP5"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tog_btn_thur"
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="20dp"
