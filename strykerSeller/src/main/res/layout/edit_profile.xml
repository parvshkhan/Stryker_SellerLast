                android:visibility="visible">

                <EditText

                    android:id="@+id/edt_business_add_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center|bottom|left"
                    android:hint="BUSINESS ADDRESS"
                    android:inputType="text"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:singleLine="true"
                    android:textColorHint="@color/Text_color_black"
                    android:textSize="@dimen/SP15"


                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_business_add_update"
                    android:background="@drawable/line3">

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_business_phone_update"
