                    android:gravity="center|bottom|left"
                    android:hint="BUSINESS NAME"
                    android:inputType="text"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:singleLine="true"
                    android:textColorHint="@color/Text_color_black"
                    android:textSize="@dimen/SP15"


                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_business_name_update"
                    android:background="@drawable/line3">

                </RelativeLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_business_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP15"
                android:visibility="visible">

                <EditText

                    android:id="@+id/edt_business_details_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center|bottom|left"
                    android:hint="ABOUT US"
                    android:inputType="textMultiLine"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:textColorHint="@color/Text_color_black"
                    android:textSize="@dimen/SP15"
                    android:digits=" 0123456789/.,%$#@!-_()?abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:text=""


                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_business_details_update"
                    android:background="@drawable/line3">

                </RelativeLayout>

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/rl_business_add"
