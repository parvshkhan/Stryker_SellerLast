                        android:layout_marginLeft="@dimen/DP5"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tog_btn_fri"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight=".2"
                        android:background="@drawable/friday_selector"
                        android:layout_marginLeft="@dimen/DP5"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tog_btn_sat"
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="20dp"
                        android:background="@drawable/saturday_selector"
                        android:layout_marginLeft="@dimen/DP5"
                        android:textOff=""
                        android:textOn="" />

                    <ToggleButton
                        android:id="@+id/tog_btn_sun"
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="20dp"
                        android:background="@drawable/sunday_selector"
                        android:layout_marginLeft="@dimen/DP5"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_days"
                    android:background="@drawable/line3">

                </RelativeLayout>

                <TextView

                    android:id="@+id/txt_operating_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:singleLine="true"
                    android:text="OPERATING DAYS"
                    android:textColor="@color/Text_color"
                    android:textSize="@dimen/SP15"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:layout_marginTop="@dimen/DP15"
                android:visibility="visible">

                <TextView

                    android:id="@+id/txt_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/DP5"
                    android:paddingLeft="@dimen/DP20"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP15"
                    android:singleLine="true"
                    android:text="DELIVERY AVAILABLE"
                    android:textColor="@color/Text_color"
                    android:textSize="@dimen/SP15"
                    android:textStyle="bold" />


                <ToggleButton
                    android:id="@+id/tog_btn_no"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/DP20"
                    android:layout_marginTop="@dimen/DP15"
                    android:background="@drawable/delivery_selector_no"
                    android:textOff=""
