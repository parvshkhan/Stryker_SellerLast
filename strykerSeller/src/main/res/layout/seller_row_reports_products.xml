<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingLeft="@dimen/DP10"
    android:paddingRight="@dimen/DP10"
    android:paddingTop="@dimen/DP15">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="@dimen/DP50"
        android:layout_height="@dimen/DP50"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/txt_initname_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/new_placeholder"
            android:gravity="center"
            android:text="P"
            android:textColor="@color/white"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/new_placeholder"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rl_right"
        android:layout_toRightOf="@+id/rl_left"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/DP10"
            android:paddingRight="@dimen/DP10">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="User Name"
                android:textColor="@color/orange1"
                android:textSize="@dimen/SP14" />

            <RelativeLayout
                android:id="@+id/rl_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_date_header"
                android:layout_marginRight="@dimen/DP20"
                android:paddingBottom="@dimen/DP5"
                android:paddingTop="@dimen/DP5">


                <TextView
                    android:id="@+id/txt_total_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Total Units"
                    android:textColor="@color/Text_color_black"
                    android:textSize="@dimen/SP15"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_unit_count_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DP10"
                    android:layout_toRightOf="@+id/txt_total_2"
                    android:singleLine="true"
                    android:text="12345"
                    android:textColor="@color/Text_color"
                    android:textSize="@dimen/SP15"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rs_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_price_2"
                    android:src="@drawable/rs" />

                <TextView
                    android:id="@+id/txt_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="222"
                    android:textColor="@color/Text_color"
                    android:textSize="@dimen/SP15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_total_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DP10"
                    android:layout_toLeftOf="@+id/img_rs_2"
                    android:text="Total"
                    android:textColor="@color/Text_color_black"
                    android:textSize="@dimen/SP15"
                    android:textStyle="normal" />


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP2"
        android:layout_below="@+id/rl_mid"
        android:layout_marginLeft="@dimen/DP60"
        android:layout_marginTop="@dimen/DP10"
        android:background="@drawable/line" />

</RelativeLayout>