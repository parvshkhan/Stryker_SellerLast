<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Text_color" >

    <!--
        <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/DP15"
        android:layout_marginTop="@dimen/DP10"
        android:padding="@dimen/DP10"
        android:src="@drawable/back_arrow" 
        android:clickable="true"
        android:visibility="gone"/>
    -->

    <ScrollView
        android:id="@+id/srcol_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/DP15"
                android:layout_marginTop="@dimen/DP10"
                android:clickable="true"
                android:padding="@dimen/DP15"
                android:src="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP50"
                android:paddingLeft="@dimen/DP50"
                android:paddingRight="@dimen/DP50" >

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="@dimen/DP15"
                    android:gravity="center_vertical|left"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:paddingRight="@dimen/DP10"
                    android:singleLine="true"
                    android:textColor="@color/white1"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/SP15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_email"
                    android:background="@drawable/line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP20"
                android:paddingLeft="@dimen/DP50"
                android:paddingRight="@dimen/DP50" >

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="@dimen/DP15"
                    android:gravity="center_vertical|left"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:paddingBottom="@dimen/DP1"
                    android:paddingRight="@dimen/DP10"
                    android:paddingTop="@dimen/DP1"
                    android:singleLine="true"
                    android:textColor="@color/white1"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/SP15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_phone"
                    android:background="@drawable/line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP20"
                android:paddingLeft="@dimen/DP50"
                android:paddingRight="@dimen/DP50" >

                <EditText
                    android:id="@+id/edt_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/DP15"
                    android:gravity="center_vertical|left"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingRight="@dimen/DP10"
                    android:singleLine="true"
                    android:textColor="@color/white1"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/SP15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_pass"
                    android:background="@drawable/line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_confirm_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP20"
                android:paddingLeft="@dimen/DP50"
                android:paddingRight="@dimen/DP50" >

                <EditText
                    android:id="@+id/edt_confirm_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/DP15"
                    android:gravity="center_vertical|left"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingRight="@dimen/DP10"
                    android:singleLine="true"
                    android:textColor="@color/white1"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/SP15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_confirm_pass"
                    android:background="@drawable/line" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DP50"
                android:layout_marginRight="@dimen/DP50"
                android:layout_marginTop="@dimen/DP35"
                android:background="@drawable/white_button"
                android:text="Sign Up"
                android:textColor="@color/SignIn"
                android:textSize="@dimen/SP20" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>