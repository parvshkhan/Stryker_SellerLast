<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/DP20"
    android:paddingRight="@dimen/DP20"
    android:layout_gravity="center_vertical"
    android:paddingTop="@dimen/DP20">


    <TextView
        android:id="@+id/txt_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/placeholder_name"
        android:text="T"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/SP20" />

    <RelativeLayout

        android:id="@+id/product_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP15"
        android:layout_marginRight="@dimen/DP30"
        android:layout_toRightOf="@+id/txt_initial">


        <TextView
            android:id="@+id/txt_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toothpaste 1"
            android:layout_toLeftOf="@+id/txt_count"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:textSize="@dimen/SP15"
            android:textColor="@color/Text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textSize="@dimen/SP15"
            android:layout_alignParentRight="true"
            android:textColor="@color/Text_color"
            android:layout_marginLeft="@dimen/DP10"/>

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_store_name"
            android:layout_marginTop="@dimen/DP5"
            android:text="Lorem Ipsum is simply dummy"
            android:textSize="@dimen/SP15"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/img_price"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/img_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_store_name"
            android:layout_marginTop="@dimen/DP5"
            android:layout_toLeftOf="@+id/txt_price"
            android:src="@drawable/rs" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_store_name"
            android:layout_marginTop="@dimen/DP5"
            android:text="120"
            android:textSize="@dimen/SP12"
            android:textColor="@color/Text_color"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rl_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP20"
        android:layout_marginLeft="@dimen/DP30"
        android:layout_below="@+id/txt_initial"
        android:layout_centerHorizontal="true"
        android:background="@drawable/line3">

    </RelativeLayout>


</RelativeLayout>
