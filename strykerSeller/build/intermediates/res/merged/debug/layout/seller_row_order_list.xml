<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DP20"
        android:textSize="@dimen/SP15"
        android:text="Jatin Rai"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/txt_time"
        android:textColor="@color/Text_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/DP20"
        android:layout_marginTop="@dimen/DP3"
        android:padding="@dimen/DP2"
        android:text="12/03/2015"
        android:textSize="@dimen/SP12" />

    <ImageView
        android:id="@+id/img_up_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_date"
        android:src="@drawable/line_up" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_up_line"
        android:padding="@dimen/DP2"
        android:text="12:35"
        android:textSize="@dimen/SP12" />


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_store_name"
        android:layout_marginTop="@dimen/DP20"
        android:background="@drawable/line1">

    </RelativeLayout>


</RelativeLayout>
