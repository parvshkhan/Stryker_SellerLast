<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:id="@+id/rel_custom_hotproduct"

    >
    <TextView
        android:id="@+id/txt_header_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bar"
        android:layout_alignParentTop="true"
        android:text=""
        android:gravity="center_vertical"
        android:textColor="@color/Text_color"
        android:textSize="@dimen/SP12"
        android:visibility="gone"
        android:clickable="false"
        android:paddingLeft="@dimen/DP20"/>

    <RelativeLayout
        android:id="@+id/rel_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/DP20"
        android:paddingRight="@dimen/DP20"
        android:paddingTop="@dimen/DP10"
        android:paddingBottom="@dimen/DP10"
        android:layout_below="@+id/txt_header_add">

    <TextView
        android:id="@+id/txt_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/placeholder_name"
        android:layout_alignParentLeft="true"
        android:text="P"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="@dimen/SP20"
        android:textColor="@color/white"
        />

    <RelativeLayout
        android:id="@+id/rel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_icon"
        android:layout_marginLeft="@dimen/DP10"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepsodent"
            android:textSize="@dimen/SP12"
            android:textColor="@color/Text_color"

            />

        <RelativeLayout
            android:id="@+id/ln_hot_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_product_name"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh and Fine"
                android:textSize="@dimen/SP12"
                android:textColor="@color/Text_color_black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/txt_price_product"
                android:layout_marginRight="@dimen/DP10"
                />

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/DP2"
                android:paddingLeft="@dimen/DP10"
                android:paddingTop="@dimen/DP3"
                android:paddingBottom="@dimen/DP3"
                android:clickable="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txt_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/rs"
                android:layout_toLeftOf="@+id/img_cancel"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/DP3"
                android:text="120"
                android:textSize="@dimen/SP12"
                android:textColor="@color/Text_color"
                android:layout_marginRight="@dimen/DP10"
                />


        </RelativeLayout>
    </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view_base"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP2"
        android:background="@drawable/line3"
        android:layout_below="@+id/rel_base"
        android:layout_marginLeft="@dimen/DP30"
        android:layout_marginRight="@dimen/DP30"/>

</RelativeLayout>
